<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.rentalapp.mapper.CustomerMapper">
	<insert id="insertCustomer" parameterType="com.rentalapp.model.CustomerModel">
		INSERT INTO
			t_customer
				(
				id
				,password
				,name
				,sex
				,birthday
				,register_date
				,update_date
				)
		VALUES
			(
			#{id}
			,#{password}
			,#{name}
			,#{sex}
			,#{birthday}
			,#{registerDate}
			,#{updateDate}
			)
	</insert>
	<select id="selectOne" parameterType="string" resultType="com.rentalapp.model.CustomerModel">
		SELECT * FROM t_customer WHERE id = #{id}
	</select>
	<select id="selectAll" resultType="com.rentalapp.model.CustomerModel">
		SELECT * FROM t_customer
	</select>
</mapper>